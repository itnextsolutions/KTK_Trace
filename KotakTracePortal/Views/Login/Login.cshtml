                </div>
                <div class="center-sign">
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "URSRegistration" }))
                    {
                        @Html.AntiForgeryToken()


                        <div class="panel11 signin_bx col-sm-6 col-lg-3 col-lg-offset-2 col-md-offset-1 col-md-5 col-sm-offset-1">
