<script>

    $(document).ready(function () {
        $("#btnReset").hide();
        var values = $("#spnError").text();

        if (values.includes('Already LoggedIn')) {
            $("#btnReset").show();
        }

        $("#btnsubmit").click(function () {

            var Password = $("#password-field").val();
            if (Password == "") { } else {
                $.ajax({
                    type: "GET",
                    async: false,
                    url: '@Url.Action("GetPassword")',
                    data: { Password: Password },
                    cache: false,
                    success: function (data) {
                        $("#password-field").val(data);
                    }
                })
            }

            $("#RedirectURLEncoded").val(location.search);
            //console.log(location.search);


        })
        $("#btnReset").click(function () {

            var User = $("input[name='UserId']").val()
            if (User == "") {alert('Please enter user name') } else {
                $.ajax({
                    type: "GET",
                    async: false,
                    url: '@Url.Action("ResetLogin")',
                    data: { User: User },
                    cache: false,
                    success: function (data) {
                        $("#btnReset").hide();
                        alert("Reset Succssfully. Kindly Login")
                    }
                })
            }

            $("#RedirectURLEncoded").val(location.search);
        })

    });



</script>

